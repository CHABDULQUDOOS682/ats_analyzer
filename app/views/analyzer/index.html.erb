<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">ATS Resume Analyzer</h1>
      <p class="mt-2 text-sm text-gray-600">
        Upload your resume and job description to get ATS analysis and improvement suggestions
      </p>
    </div>

    <%#= form_with url: analyze_path, method: :post, multipart: true, data: { turbo: false }, class: "space-y-6 bg-white shadow rounded-lg p-6" do |f| %>

    <%= form_with url: analyze_path, method: :post, multipart: true, class: "space-y-4" do |f| %>

      <div>
        <%= f.label :job_title, "Job Title", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :job_title, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :job_description, "Job Description", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :job_description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :resume, "Upload Resume (PDF only)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :resume, accept: 'application/pdf', required: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Analysis Type</label>
        <div class="mt-2 space-y-2">
          <div class="flex items-center">
            <%= f.radio_button :prompt_type, 'analyze', checked: true, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :prompt_type_analyze, "Full Analysis", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
          <div class="flex items-center">
            <%= f.radio_button :prompt_type, 'recommend', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :prompt_type_recommend, "Improvement Recommendations", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
          <div class="flex items-center">
            <%= f.radio_button :prompt_type, 'missing', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :prompt_type_missing, "Missing Keywords", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
          <div class="flex items-center">
            <%= f.radio_button :prompt_type, 'match', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <%= f.label :prompt_type_match, "ATS Match Percentage", class: "ml-3 block text-sm font-medium text-gray-700" %>
          </div>
        </div>
      </div>

      <div>
        <%#= f.submit "Analyze Resume", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= f.submit "Analyze Resume", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <div id="analysis_result" class="mt-8 bg-white shadow rounded-lg p-6">
      <!-- Results will be displayed here -->
    </div>
  </div>
</div>